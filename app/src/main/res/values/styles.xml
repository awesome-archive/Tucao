<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <!--按钮颜色-->
        <item name="colorButtonNormal">@color/login_button</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Translucent.Search" parent="AppTheme">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item> <!-- 不让窗口缩小到中间 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Translucent.Login" parent="AppTheme">
        <item name="colorButtonNormal">@color/login_button</item>
        <!--按钮背景颜色-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item> <!-- 不让窗口缩小到中间 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Me.Sweetll.Comments" parent="AppTheme">
    </style>

    <style name="Me.Sweetll.Drrr" parent="AppTheme">
    </style>

    <style name="Me.Sweetll.Message" parent="AppTheme">
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="FileExplorerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <item name="android:windowTranslucentStatus">true</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="PinkCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_600</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="PinkSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#F1F1F1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221F1F</item>
    </style>

    <style name="PinkEdit">
        <item name="colorControlNormal">@color/pink_300</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="radius">12dp</item>
        <item name="borderWidth">2dp</item>
        <item name="circleSpacing">4dp</item>
    </style>

</resources>
